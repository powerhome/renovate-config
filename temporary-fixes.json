{
  "packageRules": [
    {
      "matchManagers": ["bundler"],
      "matchPackageNames": ["mysql2"],
      "allowedVersions": "<=0.5.5",
      "description": "Departure not compatible: https://github.com/departurerb/departure/issues/107"
    },
    {
      "matchPackageNames": ["powerhome/redis-operator"],
      "allowedVersions": "<2.0.1",
      "description": "Dangerous upgrade behaviour: https://github.com/powerhome/redis-operator/issues/48"
    },
    {
      "matchPackageNames": ["percona/percona-xtradb-cluster-operator"],
      "allowedVersions": "<1.13.0",
      "description": "v1.13 is only tested on k8s > 1.24, while PAC uses 1.22: https://docs.percona.com/percona-operator-for-mysql/pxc/ReleaseNotes/Kubernetes-Operator-for-PXC-RN1.13.0.html#supported-platforms"
    }
  ]
}
